<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">customerrole</attribute>
		<attribute name="action">?ext=sysmanager&amp;controller=records</attribute>
		<attribute name="onsubmit">Todoyu.Ext.sysmanager.Extensions.Records.saveRecord(this); return false;</attribute>
	</attributes>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main customerrole data</legend>
			<elements>
				<field type="textinput" name="title">
					<label>core.title</label>
					<required />
				</field>
			</elements>
		</fieldset>
		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<type>submit</type>
				</field>
				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.sysmanager.Extensions.Records.closeForm()</onclick>
				</field>
			</elements>
		</fieldset>
	</fieldsets>
</form>