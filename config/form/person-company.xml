<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldsets>
		<fieldset name="main">
			<legend>Main company data</legend>
			<elements>

				<field type="textAC" name="id">
					<label>contact.company</label>
					<config>
						<acName>company</acName>
						<acLabel>TodoyuCompanyManager::getLabel</acLabel>
						<options>
							<onCompleteCustom>Todoyu.Ext.contact.Autocomplete.onCompanyAutocomplete</onCompleteCustom>
							<onSelectCustom>Todoyu.Ext.contact.Person.updateCompanyAddressRecords</onSelectCustom>
							<referencedFieldName>id-workaddress</referencedFieldName>
						</options>
					</config>
					<required />
					<wizard>
						<htmlClass>createNewCompany</htmlClass>
						<ext>contact</ext>
						<controller>company</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.create.company.label</title>
						<width>700</width>
						<displayCondition />
						<restrict>
							<allow ext="contact" right="contact:modify" />
						</restrict>
					</wizard>
				</field>

				<field type="select" name="id_workaddress">
					<label>contact.workaddress</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getWorkaddressOptionsPerson</function>
						<lazyInit/>
					</source>
				</field>

				<field type="select" name="id_jobtype">
					<label>contact.jobtype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getJobTypeOptions</function>
						<lazyInit/>
					</source>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>