<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">customer</attribute>
	</attributes>
	<fieldsets>
		<fieldset name="main">
			<legend>Main company data</legend>
			<elements>

				<field type="textinputAC" name="id">
					<label>LLL:user.user.attr.user-company.company</label>
					<config>
						<acListener>
							<ext>contact</ext>
							<controller>autocompletion</controller>
							<action>company</action>
						</acListener>
						<acLabelFunc>TodoyuCustomerManager::getLabel</acLabelFunc>
					</config>
					<required />
				</field>
				
				<field type="select" name="id_workaddress">
					<label>LLL:user.worklocation</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getWorkaddressOptions</function>
						<lazyInit/>
					</source>
				</field>

				<field type="select" name="id_jobtype">
					<label>LLL:user.jobtype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getJobtypeOptions</function>
						<lazyInit/>
					</source>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>