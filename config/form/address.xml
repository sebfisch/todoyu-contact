<?xml version="1.0" encoding="UTF-8"?>
<form>
	<hiddenFields>
		<field name="id" />
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main address data</legend>
			<elements>

				<field type="select" name="id_addresstype">
					<label>contact.address.attr.addresstype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getAddressTypeOptions</function>
					</source>
					<required />
				</field>

				<field type="text" name="street">
					<label>contact.address.attr.street</label>
					<required />
				</field>

				<field type="text" name="postbox">
					<label>contact.address.attr.postbox</label>
				</field>

				<field type="text" name="zip">
					<label>contact.address.attr.zip</label>
					<required />
				</field>

				<field type="text" name="city">
					<label>contact.address.attr.city</label>
					<required />
				</field>

				<field type="select" name="id_country">
					<label>contact.address.attr.country</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getCountryOptions</function>
					</source>
					<extraAttributes>onchange="Todoyu.Ext.contact.Address.onChangeCountry(this, 'region', 'id-country');"</extraAttributes>
				</field>

				<field type="select" name="region">
					<label>contact.address.attr.region</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getRegionOptions</function>
						<lazyInit/>
					</source>
				</field>

				<field type="checkbox" name="is_preferred">
					<label>form.is_preferred</label>
				</field>

				<field type="textarea" name="comment">
					<label>contact.address.attr.comment</label>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>