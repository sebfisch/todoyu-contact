<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=contact&amp;controller=formhandling</attribute>
		<attribute name="name">address</attribute>
		<attribute name="class">formAddress</attribute>
	</attributes>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main address data</legend>
			<elements>
				<field type="select" name="id_addresstype">
					<label>LLL:user.address.attr.addresstype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getAddressTypeOptions</function>
					</source>
					<required />
				</field>
				<field type="textinput" name="street">
					<label>LLL:user.address.attr.street</label>
					<required />
				</field>
				<field type="textinput" name="postbox">
					<label>LLL:user.address.attr.postbox</label>
				</field>
				<field type="textinput" name="zip">
					<label>LLL:user.address.attr.zip</label>
					<required />
				</field>
				<field type="textinput" name="city">
					<label>LLL:user.address.attr.city</label>
					<required />
				</field>

				<field type="select" name="id_country">
					<label>LLL:user.address.attr.country</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getCountryOptions</function>
					</source>
				</field>
				<field type="textinputAC" name="region">
					<label>LLL:user.address.attr.region</label>
					<config>
						<acListener>
							<ext>contact</ext>
							<controller>autocompletion</controller>
							<cmd>region</cmd>
						</acListener>
						<acLabelFunc>TodoyuDatasourcegetRegionLabel</acLabelFunc>
					</config>
				</field>
				<field type="checkbox" name="is_preferred">
					<label>LLL:user.address.attr.is_preferred</label>
				</field>
				<field type="textarea" name="comment">
					<label>LLL:user.address.attr.comment</label>
				</field>
			</elements>
		</fieldset>
	</fieldsets>
</form>