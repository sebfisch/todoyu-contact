<?xml version="1.0" encoding="UTF-8"?>
<form>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main contactinfo data</legend>
			<elements>
				
				<field type="select" name="id_contactinfotype">
					<label>contact.contactinfo.attr.type</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getContactInfoTypeOptions</function>
					</source>
					<required />
				</field>
				
				<field type="textinput" name="info">
					<label>user.contactinfo.attr.info</label>
					<required />
				</field>
				
				<field type="checkbox" name="preferred">
					<label>form.is_preferred</label>
				</field>
				
			</elements>
		</fieldset>
	</fieldsets>
</form>