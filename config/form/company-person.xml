<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldsets>
		<fieldset name="main">
			<legend>Company Person Data</legend>
			<elements>

				<field type="textAC" name="id">
					<label>contact.person</label>
					<config>
						<acName>person</acName>
						<acLabel>TodoyuPersonManager::getLabel</acLabel>
						<options>
							<onComplete>Todoyu.Ext.contact.Autocomplete.onPersonAutocomplete</onComplete>
						</options>
					</config>
					<wizard>
						<htmlClass>createNewPerson</htmlClass>
						<ext>contact</ext>
						<controller>person</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.person.create</title>
						<width>700</width>
						<displayCondition />
					</wizard>
					<required />
				</field>

				<field type="select" name="id_workaddress">
					<label>contact.workaddress</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getWorkaddressOptionsCompany</function>
						<lazyInit/>
					</source>
				</field>

				<field type="select" name="id_jobtype">
					<label>contact.jobtype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getJobTypeOptions</function>
						<lazyInit/>
					</source>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>