<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">user</attribute>
	</attributes>
	<fieldsets>
		<fieldset name="main">
			<legend>Main company data</legend>
			<elements>

				<field type="textinputAC" name="id">
					<label>user.company.attr.customer-user.person</label>
					<config>
						<acListener>
							<ext>contact</ext>
							<controller>autocompletion</controller>
							<action>user</action>
						</acListener>
						<acLabelFunc>TodoyuPersonManager::getLabel</acLabelFunc>
						<options>
							<onCompleteCustom>Todoyu.Ext.contact.Autocomplete.onUserAutocomplete</onCompleteCustom>
						</options>
					</config>
					<wizard>
						<htmlClass>createNewUser</htmlClass>
						<ext>contact</ext>
						<controller>person</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.contact.createnew</title>
						<width>700</width>
						<displayCondition></displayCondition>
					</wizard>
					<required>1</required>
				</field>

				<field type="select" name="id_workaddress">
					<label>user.worklocation</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getWorkaddressOptionsCompany</function>
						<lazyInit/>
					</source>
				</field>

				<field type="select" name="id_jobtype">
					<label>user.jobtype</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getJobtypeOptions</function>
						<lazyInit/>
					</source>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>