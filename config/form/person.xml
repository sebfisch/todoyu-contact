<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=contact&amp;controller=person</attribute>
		<attribute name="name">person</attribute>

	</attributes>
	<hiddenFields>
		<field name="id"/>
	</hiddenFields>
	<fieldsets>
		
		<fieldset name="main">
			<legend>Main user data</legend>
			<elements>

				<field type="select" name="gender">
					<label>contact.person.attr.gender</label>
					<source type="list">
						<option>
							<value>m</value>
							<label>contact.person.attr.gender.m</label>
						</option>
						<option>
							<value>w</value>
							<label>contact.person.attr.gender.f</label>
						</option>
					</source>
				</field>

				<field type="textinput" name="lastname">
					<label>contact.person.attr.lastname</label>
					<required/>
				</field>

				<field type="textinput" name="firstname">
					<label>contact.person.attr.firstname</label>
					<required />
				</field>

				<field type="textinput" name="shortname">
					<label>contact.person.attr.shortname</label>
				</field>

				<field type="dateinput" name="birthday">
					<label>contact.person.attr.birthday</label>
					<calendar>
						<range>[1940,2020]</range>
					</calendar>
					<storeAsDate />
				</field>
				
			</elements>
		</fieldset>
		
		<fieldset name="relations">
			<legend>Person relations</legend>
			<elements>

				<field type="databaseRelation" name="contactinfo">
					<label>contact.person.attr.contactinfo</label>
					<record>
						<form>ext/contact/config/form/contactinfo.xml</form>
						<url>
							<ext>contact</ext>
							<controller>person</controller>
						</url>
						<label type="function">
							<function>TodoyuContactViewHelper::getContactinfoLabel</function>
							<noLabel>Neue Kontaktinformation</noLabel>
						</label>
					</record>
				</field>

				<field type="databaseRelation" name="address">
					<label>contact.person.attr.address</label>
					<record>
						<form>ext/contact/config/form/address.xml</form>
						<url>
							<ext>contact</ext>
							<controller>formhandling</controller>
						</url>
						<label type="function">
							<function>TodoyuContactViewHelper::getAddressLabel</function>
							<noLabel>Neue Adresse</noLabel>
						</label>
					</record>
				</field>

				<field type="databaseRelation" name="company">
					<label>contact.person.attr.company</label>
					<record>
						<form>ext/contact/config/form/user-company.xml</form>
						<url>
							<ext>contact</ext>
							<controller>person</controller>
						</url>
						<label type="function">
							<function>TodoyuContactViewHelper::getCompanyLabel</function>
							<noLabel>Neuer Arbeitgeber</noLabel>
						</label>
					</record>
				</field>

			</elements>
		</fieldset>
		
		
		<fieldset name="account">
			<legend>Login account</legend>
			<restrict>
				<allow ext="contact" right="person:enableLogin" />
				<allow ext="contact" right="person:enableLogin" />
			</restrict>
			<elements>
				
				<field type="checkbox" name="active">
					<label>contact.person.attr.active</label>
				</field>
				
				<fieldset name="loginfields">
					<elements>
				
						<field type="textinput" name="username">
							<label>contact.person.attr.username</label>
							<validate>
								<unique>
									<table>ext_contact_person</table>
									<allowEmpty />
								</unique>
							</validate>
						</field>
		
						<field type="textinput" name="password">
							<label>contact.person.attr.password</label>
							<type>password</type>
							<validate>
								<goodPassword>
									<allowEmpty />
								</goodPassword>
							</validate>
						</field>
						
						<field type="textinput" name="email">
							<label>contact.person.attr.email</label>
							<validate>
								<email>
									<allowEmpty />
								</email>
								<requiredIfNotEmpty>
									<field>username</field>
								</requiredIfNotEmpty>								
							</validate>
							<required />
						</field>
		
						<field type="checkbox" name="is_admin">
							<label>contact.person.attr.is_admin</label>
						</field>
		
						<field type="databaseRelation" name="role">
							<label>core.roles</label>
							<record>
								<form>ext/contact/config/form/person-role.xml</form>
								<url>
									<ext>contact</ext>
									<controller>person</controller>
								</url>
								<label type="field">
									<field>title</field>
									<noLabel>user.attr.usergroup.noLabel</noLabel>
								</label>
							</record>
						</field>
					</elements>
				</fieldset>
				
			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.contact.Person.save(this.form)</onclick>
				</field>
				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.contact.Person.closeForm()</onclick>
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>