<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=contact&amp;controller=person</attribute>
		<attribute name="name">person</attribute>
		<attribute name="onsubmit">return false</attribute>
		<attribute name="class">formPerson</attribute>
	</attributes>
	<hiddenFields>
		<field name="id"/>
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main user data</legend>
			<elements>
<!--
				<field type="select" name="type">
					<label>user.user.attr.type</label>
					<source type="function">
						<function>TodoyuContactViewHelper::getUserTypeOptions</function>
					</source>
				</field>
-->
				<field type="select" name="gender">
					<label>user.user.attr.gender</label>
					<source type="list">
						<option>
							<value>m</value>
							<label>user.user.attr.gender.m</label>
						</option>
						<option>
							<value>w</value>
							<label>user.user.attr.gender.f</label>
						</option>
					</source>
				</field>

				<field type="textinput" name="lastname">
					<label>user.user.attr.lastname</label>
					<required/>
				</field>

				<field type="textinput" name="firstname">
					<label>user.user.attr.firstname</label>
					<required />
				</field>

				<field type="textinput" name="shortname">
					<label>user.user.attr.shortname</label>
				</field>

				<field type="textinput" name="email">
					<label>user.user.attr.email</label>
				</field>

				<field type="dateinput" name="birthday">
					<label>user.user.attr.birthday</label>
					<calendar>
						<range>[1940,2020]</range>
					</calendar>
					<storeAsDate />
				</field>

				<field type="databaseRelation" name="contactinfo">
					<label>user.user.attr.contactinfo</label>
					<foreignRecordConf>
						<foreignformxml>ext/contact/config/form/contactinfo.xml</foreignformxml>
						<addSubformConfig>
							<ext>contact</ext>
							<controller>person</controller>
						</addSubformConfig>
						<label type="function">
							<function>TodoyuContactViewHelper::getContactinfoLabel</function>
							<noLabel>Neue Kontaktinformation</noLabel>
						</label>
					</foreignRecordConf>
				</field>

				<field type="databaseRelation" name="address">
					<label>user.user.attr.address</label>
					<foreignRecordConf>
						<foreignformxml>ext/contact/config/form/address.xml</foreignformxml>
						<addSubformConfig>
							<ext>contact</ext>
							<controller>formhandling</controller>
						</addSubformConfig>
						<label type="function">
							<function>TodoyuContactViewHelper::getAddressLabel</function>
							<noLabel>Neue Adresse</noLabel>
						</label>
					</foreignRecordConf>
				</field>

				<field type="databaseRelation" name="company">
					<label>user.user.attr.company</label>
					<foreignRecordConf>
						<foreignformxml>ext/contact/config/form/user-company.xml</foreignformxml>
						<addSubformConfig>
							<ext>contact</ext>
							<controller>person</controller>
						</addSubformConfig>
						<label type="function">
							<function>TodoyuContactViewHelper::getCompanyLabel</function>
							<noLabel>Neuer Arbeitgeber</noLabel>
						</label>
					</foreignRecordConf>
				</field>

			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.contact.Person.save(this.form)</onclick>
				</field>
				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.contact.Person.closeForm()</onclick>
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>