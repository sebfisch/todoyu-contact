<form class="fForm overflow" id="panelwidget-{$id}-form">
	<fieldset>
		<legend>{Label core.search}</legend>
		<label for="panelwidget-{$id}-sword">{Label core.search}</label>
		<input type="text" name="sword" id="panelwidget-{$id}-sword" value="{htmlencode $sword}" />
		<a class="icon searchIcon" onclick="Todoyu.Ext.contact.PanelWidget.ContactSearch.search()" title="{Label core.search}"></a>
		<a class="icon clearIcon hidden" id="panelwidget-{$id}-clear" onclick="Todoyu.Ext.contact.PanelWidget.ContactSearch.clear()" title="{Label panelwidget-contactsearchinput.clearSword}"></a>
	</fieldset>
</form>
