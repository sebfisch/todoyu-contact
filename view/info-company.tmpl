<div class="visitingCardContent">
	<table>
		<tr class="odd">
			<td class="label">{Label contact.company.attr.title}:</td>
			<td width="70%" colspan="3">{$title}</td>
		</tr>
		{if strlen($shortname) > 0}
			<tr class="odd">
				<td class="label">{Label contact.company.attr.shortname}:</td>
				<td colspan="3">{$shortname}</td>
			</tr>
		{/if}
		<tr class="even"><td colspan="4"><br/></td></tr>
		{if $date_enter != 0}
			<tr>
				<td class="label">{Label contact.company.attr.date_enter}:</td>
				<td colspan="3">{dateFormat $date_enter "date" }</td>
			</tr>
		{/if}

		<tr>
			<td colspan="4">
				&nbsp;
			</td>
		</tr>

		{* Contact infos *}
		{foreach $contactinfo key contactinfoData contactinfoIterator}
			<tr>
				{if $.foreach.contactinfoIterator.first}
					<td class="label">{Label contact.contactinfo}</td>
				{else}
					<td class="label">&nbsp;</td>
				{/if}
				<td>
					{labelContactinfotype $contactinfoData.id_contactinfotype}
				</td>
				<td colspan="2">
				 	{$contactinfoData.info}
				</td>
			</tr>
		{/foreach}

		<tr>
			<td colspan="4">
				&nbsp;
			</td>
		</tr>

		{foreach $address key addressData addressIterator}
			<tr>
				{if $.foreach.addressIterator.first}
					<td class="label">{Label contact.address}</td>
				{else}
					<td class="label"></td>
				{/if}
				<td colspan="3">
					{$addressData.street}<br />
					{if $addressData.postbox} {Label contact.address.attr.postbox}: {$addressData.postbox}<br />{/if}
					{$addressData.zip} {$addressData.city}<br />
					{if $addressData.region}{$addressData.region}{/if}
					{if $addressData.id_country} {countryName $addressData.id_country}<br />{/if}
					<br />
					{if $addressData.comment}
						<p>
							{$addressData.comment}
						</p>
					{/if}
				<td>
			</tr>
		{/foreach}

		{if $persons}
			<tr>
				<td colspan="4">
					&nbsp;
				</td>
			</tr>
		{/if}

		{foreach $persons key personData employeeIterator}
			<tr>
				{if $.foreach.employeeIterator.first}
					<td class="label">{Label contact.company.attr.user}</td>
				{else}
					<td class="label"></td>
				{/if}
				<td>
					{$personData.lastname}</td>
				<td>
				 	{$personData.firstname}
				</td>
				<td>
					{$personData.email}
				</td>
			</tr>
		{/foreach}

	</table>
</div>